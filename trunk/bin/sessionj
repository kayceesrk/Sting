#!/bin/sh

prg=`basename "$0"`
dir=`dirname "$0"`/..

usage() {
  polyglot -h
  cat <<EOF
  -j <jvm-options>         pass options to the Java VM
  -J <jvm>                 use a different Java VM (default java in path)
  -V                       echo the java command
EOF
}

fixclasspath() {
  windows=0

  if [ `uname | grep -c CYGWIN` -ne 0 ]; then
    windows=1
  fi

  cp="$1"
  if [ "$windows" = 1 ]; then 
      cygpath -pw "$cp"
  else
      echo "$cp"
  fi
}

extra_cp="$dir/lib/javaflow.jar:$dir/lib/bcel.jar:$dir/lib/commons.jar"
args=
vmargs=
classpath=
java='java'
ext=sessionj
eclipse=0

polyglot() {
  eval "$java" "$vmargs" -classpath "'$classpath'" "$@"
}

while true; do
    case "$1" in
        "")
            break
            ;;
        -V)
            verbose=1
            shift
            ;;
        #-classpath)
        -cp)
            shift
            extra_cp="$extra_cp:$1"
            shift
            ;;
        -j)
            shift
            vmargs="$vmargs '$1'"
            shift
            ;;
        -J)
            shift
            java="'$1'"
            shift
            ;;
        -h)
            usage=1
            break
            ;;
        -E)
            eclipse=1
            shift
            ;;            
        *)
            args="$args '$1'"
            shift
            ;;
    esac
done

#if [ -n "$ext" ]; then
#  args="-ext '$ext' $args"
#fi

if [ "$eclipse" = 1 ]; then
  classpath="$dir/eclipse-bin:$dir/lib/polyglot.jar:$dir/lib/java_cup.jar"
else
  classpath="$dir/compiler/classes:$dir/runtime/classes:$dir/lib/polyglot.jar:$dir/lib/java_cup.jar"
fi

if [ -n "$ext" ]; then
  classpath="$classpath:$dir/lib/$ext.jar:$dir/lib/${ext}-rt.jar"
fi

classpath="$classpath:$extra_cp"
classpath=`fixclasspath "$classpath"`


if [ "$usage" = 1 ]; then
  usage
  exit 0
fi

if [ "$verbose" = 1 ]; then
  echo "$java" "$vmargs" -classpath "'$classpath'" "$@"
fi

polyglot "$args"
